{% extends "AmandineAdminBundle::layout.html.twig" %}

{% block content %}
<h2>Visualisé ici tout vos produits</h2>
	
  	<table class="table" id="table-a-trier">
  		<thead class="thead">
		  	<tr>
		  		<th>Nom</th>
		  		<th>Prix HT</th>
		  		<th>Couleur</th>
		  		<th>Stock</th>
		  		<th>Sous-catégorie</th>
		  		<th><th>
		  	
		  	</tr>
	  	</thead>
	  	<tbody>
		  	{% for product in listProducts %}
		      <tr>
		        <td>
		        	<a href="{{ path('amandine_admin_viewproduct', {'id': product.id}) }}">{{ product.name }}</a>
		        </td>  
		        <td>{{ product.htPrice|number_format(2, '.', ',') }}</td>
		        <td>{{ product.color }}</td>
		        <td>{{ product.stock }}<a class="btn btn-info" href="{{ path('amandine_admin_stockproduct', {'id': product.id}) }}">   <i class="fas fa-plus"></i></a></td>
		        <td>{{ product.subCategory.name }}</td>
		        <td>
		        	<a class="btn btn-info" href="{{ path('amandine_admin_viewproduct', {'id': product.id}) }}"><i class="fas fa-search-plus"></i></a>
		        	<a class="btn btn-info" href="{{ path('amandine_admin_updateproduct', {'id' : product.id}) }}"><i class="fas fa-pencil-alt"></i></a>
					<a class="btn btn-info" href="{{ path('amandine_admin_deleteproduct', {'id' : product.id}) }}"><i class="fas fa-trash-alt"></i></a>
		        </td>
		        
		      </tr>
		    {% else %}
		      <tr><td>Pas encore de produit</td></tr>
		    {% endfor %}
	    </tbody>
  	</table>

{% endblock %}